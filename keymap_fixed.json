[
  // Global workspace shortcuts (work in all modes)
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-n": "workspace::NewFile",
      "cmd-shift-s": "workspace::SaveAs",
      "cmd-w": "pane::CloseActiveItem",
      "cmd-o": "workspace::Open",
      "cmd-,": "zed::OpenSettings",
      "cmd-q": "zed::Quit",
      "cmd-h": "zed::Hide",
      "alt-cmd-h": "zed::HideOthers",
      "cmd-m": "zed::Minimize",
      "fn-f": "zed::ToggleFullScreen",
      "ctrl-cmd-f": "zed::ToggleFullScreen",
      "ctrl-cmd-z": "workspace::ToggleZoom",
      "ctrl-cmd-i": "zed::OpenUrl"
    }
  },

  // Vim Mode - Normal Mode Keybindings (only when vim is enabled)
  {
    "context": "vim_mode && VimControl && !VimWaiting && !menu",
    "bindings": {
      // Pane navigation with Ctrl+hjkl (vim/tmux style)
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",

      // Leader key bindings with Space
      "space e": "project_panel::ToggleFocus",
      "space f": "file_finder::Toggle",
      "space g": "project_search::ToggleFocus",
      "space b": "tab_switcher::Toggle",
      "space t": "terminal_panel::ToggleFocus",
      "space w": "workspace::Save",
      "space q": "pane::CloseActiveItem",
      "space p": "command_palette::Toggle",
      "space o": "outline::Toggle"
    }
  },

  // VSCode-style keybindings (only when vim mode is OFF)
  {
    "context": "Editor && !vim_mode",
    "use_key_equivalents": true,
    "bindings": {
      "escape": "editor::Cancel",
      "shift-backspace": "editor::Backspace",
      "ctrl-h": "editor::Backspace",
      "backspace": "editor::Backspace",
      "ctrl-d": "editor::Delete",
      "delete": "editor::Delete",
      "tab": "editor::Tab",
      "shift-tab": "editor::Backtab",
      "ctrl-t": "editor::Transpose",
      "ctrl-k": "editor::CutToEndOfLine",
      "ctrl-y": "editor::Paste",
      "cmd-k cmd-q": "editor::ShowHover",
      "cmd-k q": "editor::ShowHover",
      "cmd-backspace": "editor::DeleteToBeginningOfLine",
      "cmd-delete": "editor::DeleteToEndOfLine",
      "alt-backspace": "editor::DeleteToPreviousWordStart",
      "ctrl-w": "editor::DeleteToPreviousWordStart",
      "alt-delete": "editor::DeleteToNextWordEnd",
      "cmd-x": "editor::Cut",
      "cmd-c": "editor::Copy",
      "cmd-v": "editor::Paste",
      "cmd-z": "editor::Undo",
      "cmd-shift-z": "editor::Redo",

      // VSCode-style navigation
      "cmd-p": "file_finder::Toggle",
      "cmd-shift-p": "command_palette::Toggle",
      "cmd-shift-f": "project_search::ToggleFocus",
      "cmd-f": "buffer_search::Deploy",
      "cmd-shift-o": "outline::Toggle",
      "ctrl-g": "go_to_line::Toggle",

      // VSCode-style editing
      "cmd-d": ["editor::SelectNext", {"replace_newest": false}],
      "cmd-shift-l": "editor::SelectAllMatches",
      "cmd-u": "editor::UndoSelection",
      "cmd-shift-k": "editor::DeleteLine",
      "alt-up": "editor::MoveLineUp",
      "alt-down": "editor::MoveLineDown",
      "alt-shift-up": "editor::AddSelectionAbove",
      "alt-shift-down": "editor::AddSelectionBelow",
      "cmd-/": ["editor::ToggleComments", {"advance_downwards": false}],

      // Code actions
      "cmd-shift-i": "editor::Format",
      "cmd-.": "editor::ToggleCodeActions",
      "f2": "editor::Rename",
      "f12": "editor::GoToDefinition",
      "alt-f12": "editor::GoToReferences",

      // Panel toggles
      "cmd-b": "workspace::ToggleLeftDock",
      "cmd-j": "workspace::ToggleBottomDock",
      "ctrl-`": "terminal_panel::ToggleFocus",

      // Movement
      "ctrl-p": "menu::SelectPrev",
      "ctrl-n": "menu::SelectNext",
      "ctrl-b": "editor::MoveLeft",
      "left": "editor::MoveLeft",
      "ctrl-f": "editor::MoveRight",
      "right": "editor::MoveRight",
      "ctrl-l": "editor::ShowCompletions",
      "alt-left": "editor::MoveToPreviousWordStart",
      "alt-right": "editor::MoveToNextWordEnd",
      "cmd-left": ["editor::MoveToBeginningOfLine", {"stop_at_soft_wraps": true, "stop_at_indent": true}],
      "ctrl-a": ["editor::MoveToBeginningOfLine", {"stop_at_soft_wraps": true, "stop_at_indent": true}],
      "home": ["editor::MoveToBeginningOfLine", {"stop_at_soft_wraps": true, "stop_at_indent": true}],
      "cmd-right": ["editor::MoveToEndOfLine", {"stop_at_soft_wraps": true}],
      "ctrl-e": ["editor::MoveToEndOfLine", {"stop_at_soft_wraps": true}],
      "end": ["editor::MoveToEndOfLine", {"stop_at_soft_wraps": true}],
      "cmd-up": "editor::MoveToBeginning",
      "cmd-down": "editor::MoveToEnd",
      "cmd-home": "editor::MoveToBeginning",
      "cmd-end": "editor::MoveToEnd"
    }
  },

  // Search panel
  {
    "context": "ProjectSearchBar",
    "use_key_equivalents": true,
    "bindings": {
      "shift-enter": "search::ActivatePrevious",
      "enter": "search::ActivateNext",
      "cmd-enter": "search::ActivateAll",
      "cmd-shift-enter": "search::ActivateAllInDirectory",
      "cmd-k z": "search::ToggleCaseSensitive",
      "cmd-f": "search::FocusEditor",
      "cmd-alt-f": "search::ToggleReplace",
      "cmd-alt-l": ["search::ToggleReplace", {"selection_search_enabled": true}],
      "cmd-e": ["search::SelectNextMatch", {"focus": false}],
      "cmd->": "search::NextHistoryQuery",
      "cmd-<": "search::PreviousHistoryQuery",
      "cmd-alt-e": "search::SelectAllMatches",
      "alt-enter": "search::ActivateAll"
    }
  },

  // Buffer search
  {
    "context": "BufferSearchBar",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-up": "search::PreviousHistoryQuery",
      "cmd-down": "search::NextHistoryQuery",
      "cmd-shift-up": "search::PreviousHistoryQuery",
      "cmd-shift-down": "search::NextHistoryQuery"
    }
  },

  // Workspace context (global)
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-s": "workspace::Save",
      "cmd-k s": "workspace::SaveWithoutFormat",
      "alt-shift-enter": "workspace::NewTerminal",
      "cmd-shift-s": "workspace::SaveAs",
      "cmd-shift-n": "workspace::NewWindow",
      "ctrl-`": "terminal_panel::ToggleFocus",
      "cmd-1": ["workspace::ActivatePane", 0],
      "cmd-2": ["workspace::ActivatePane", 1],
      "cmd-3": ["workspace::ActivatePane", 2],
      "cmd-4": ["workspace::ActivatePane", 3],
      "cmd-5": ["workspace::ActivatePane", 4],
      "cmd-6": ["workspace::ActivatePane", 5],
      "cmd-7": ["workspace::ActivatePane", 6],
      "cmd-8": ["workspace::ActivatePane", 7],
      "cmd-9": ["workspace::ActivatePane", 8],
      "cmd-b": "workspace::ToggleLeftDock",
      "cmd-r": "workspace::ToggleRightDock",
      "cmd-j": "workspace::ToggleBottomDock",
      "alt-cmd-y": "workspace::CloseAllDocks",
      "cmd-shift-f": "project_search::ToggleFocus",
      "cmd-shift-h": ["project_search::ToggleFocus", {"replace_enabled": true}],
      "cmd-shift-t": "project_symbols::Toggle",
      "cmd-k cmd-s": "zed::OpenKeymap",
      "cmd-k cmd-t": "theme_selector::Toggle",
      "cmd-t": "file_finder::Toggle",
      "cmd-p": "file_finder::Toggle",
      "ctrl-tab": "tab_switcher::Toggle",
      "ctrl-shift-tab": ["tab_switcher::Toggle", {"select_last": true}],
      "cmd-shift-p": "command_palette::Toggle",
      "cmd-shift-m": "diagnostics::Deploy",
      "cmd-shift-e": "project_panel::ToggleFocus",
      "cmd-shift-b": "search::ToggleReplace",
      "ctrl-shift-g": "search::ToggleReplace",
      "cmd-?": "assistant::ToggleFocus",
      "cmd-alt-s": "workspace::SaveAll",
      "cmd-k m": "language_selector::Toggle",
      "escape": "workspace::Unfollow",
      "cmd-k cmd-left": "workspace::ActivatePaneLeft",
      "cmd-k cmd-right": "workspace::ActivatePaneRight",
      "cmd-k cmd-up": "workspace::ActivatePaneUp",
      "cmd-k cmd-down": "workspace::ActivatePaneDown",
      "cmd-k shift-left": "workspace::SwapPaneLeft",
      "cmd-k shift-right": "workspace::SwapPaneRight",
      "cmd-k shift-up": "workspace::SwapPaneUp",
      "cmd-k shift-down": "workspace::SwapPaneDown",
      "cmd-shift-x": "workspace::ActivateNextPane"
    }
  },

  // Panes
  {
    "context": "Pane",
    "use_key_equivalents": true,
    "bindings": {
      "alt-cmd-left": "pane::ActivatePrevItem",
      "cmd-{": "pane::ActivatePrevItem",
      "alt-cmd-right": "pane::ActivateNextItem",
      "cmd-}": "pane::ActivateNextItem",
      "ctrl-shift-pageup": "pane::ActivatePrevItem",
      "ctrl-shift-pagedown": "pane::ActivateNextItem",
      "cmd-w": ["pane::CloseActiveItem", {"close_pinned": true}],
      "alt-cmd-t": ["pane::CloseInactiveItems", {"close_pinned": false}],
      "ctrl-alt-cmd-w": "pane::CloseAllItems",
      "cmd-k e": ["pane::CloseInactiveItems", {"close_pinned": false}],
      "cmd-k t": ["pane::CloseInactiveItems", {"close_pinned": false}],
      "cmd-k u": ["pane::CloseCleanItems", {"close_pinned": false}],
      "cmd-k cmd-w": ["pane::CloseAllItems", {"close_pinned": false}],
      "cmd-f": "buffer_search::Deploy",
      "cmd-g": "search::SelectNextMatch",
      "cmd-shift-g": "search::SelectPrevMatch",
      "cmd-shift-h": "project_search::ToggleFocus",
      "cmd-alt-l": ["project_search::ToggleFocus", {"selection_search_enabled": true}],
      "alt-enter": "assistant::InlineAssist",
      "alt-cmd-c": "assistant::ToggleFocus",
      "alt-cmd-w": "assistant::ToggleHistory",
      "alt-cmd-f": "assistant::ToggleModelSelector",
      "alt-cmd-x": "assistant::ToggleContext",
      "cmd-k shift-enter": "assistant::NewContext"
    }
  },

  // File finder
  {
    "context": "FileFinder",
    "use_key_equivalents": true,
    "bindings": {
      "escape": "file_finder::Toggle",
      "tab": "file_finder::SelectNext",
      "enter": "file_finder::Open",
      "shift-enter": "file_finder::OpenInNewPane",
      "alt-enter": "file_finder::OpenInSplit",
      "cmd-f": "file_finder::Toggle",
      "cmd-alt-f": "file_finder::Toggle",
      "cmd-alt-l": "file_finder::ToggleSearch",
      "cmd-shift-o": "file_finder::Toggle"
    }
  },

  // Command palette
  {
    "context": "CommandPalette",
    "use_key_equivalents": true,
    "bindings": {
      "enter": "command_palette::Confirm",
      "cmd-enter": "command_palette::SecondaryConfirm"
    }
  },

  // Menu
  {
    "context": "Menu",
    "use_key_equivalents": true,
    "bindings": {
      "up": "menu::SelectPrev",
      "down": "menu::SelectNext",
      "escape": "menu::Cancel"
    }
  },

  // Terminal
  {
    "context": "Terminal",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-cmd-space": "terminal::ShowCharacterPalette",
      "cmd-c": "terminal::Copy",
      "cmd-v": "terminal::Paste",
      "cmd-a": "terminal::SelectAll",
      "cmd-k": "terminal::Clear",
      "cmd-n": "terminal::ShowInFolder",
      "ctrl-enter": "terminal::NewLine",
      "ctrl-_": "terminal::Undo",
      "cmd-backspace": "terminal::DeleteLine",
      "cmd-right": "terminal::MoveToEndOfLine",
      "cmd-left": "terminal::MoveToBeginningOfLine",
      "alt-left": "terminal::MoveToPreviousWord",
      "alt-right": "terminal::MoveToNextWord",
      "alt-b": "terminal::MoveToPreviousWord",
      "alt-f": "terminal::MoveToNextWord",
      "up": "terminal::HistoryPrevious",
      "pageup": "terminal::PageUp",
      "down": "terminal::HistoryNext",
      "pagedown": "terminal::PageDown",
      "escape": "terminal::Escape",
      "enter": "terminal::Enter",
      "ctrl-c": "terminal::SendText",
      "shift-pageup": "terminal::ScrollPageUp",
      "cmd-up": "terminal::ScrollToTop",
      "shift-pagedown": "terminal::ScrollPageDown",
      "cmd-down": "terminal::ScrollToBottom",
      "shift-up": "terminal::ScrollLineUp",
      "shift-down": "terminal::ScrollLineDown",
      "shift-home": "terminal::ScrollToTop",
      "cmd-home": "terminal::ScrollToTop",
      "shift-end": "terminal::ScrollToBottom",
      "cmd-end": "terminal::ScrollToBottom",
      "ctrl-shift-space": "terminal::SendText",
      "ctrl-k up": "pane::SplitUp",
      "ctrl-k down": "pane::SplitDown",
      "ctrl-k left": "pane::SplitLeft",
      "ctrl-k right": "pane::SplitRight"
    }
  }
]
